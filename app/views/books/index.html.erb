
<div class="flash">
    <% flash.each do |key, value| %>
        <p class="flash-text"><%= value %></p>
    <% end %>
</div>


<div class="books">
     <h1>Books</h1>
     <table>
         <thead>
             <tr>
                 <th>Title</th>
                 <th>Body</th>
                 <th colspan="3"></th>
             </tr>
         </thead>
         <tbody>
            <% @books.each do |book| %>
             <tr>
               <td><%= book.title %></td>
               <td><%= book.body %></td>
               <td><%= link_to "Show", book %></td>
               <td><%= link_to "Edit", edit_book_path(book.id) %></td>
               <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
            　</tr>
          　<% end %>
         </tbody>
     </table>

     <h2>New book</h2>


      <% if @book.errors.any? %>
         <div id="error">
           <h2 class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
             <% @book.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
           <% end %>
         </div>
      <% end %>
     <%= form_with model:@book, local:true do |f| %>
         <div class="field">
             <div class="book_title">Title</div>
             <%= f.text_field :title %>
         </div>
         <div class="field">
             <div class="book_body">Body</div>
             <%= f.text_area :body %>
         </div>
         <div class="actions">
         <%= f.submit 'Create Book' %>
         </div>
     <% end %>
</div>