
<div class="editing">
    <h1>Editing Book</h1>

<% if @book.errors.any? %>
      <div id="error">
           <h2 class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
             <% @book.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
           <% end %>
      </div>
<% end %>


   <%= form_with model:@book, local:true do |f| %>
      <div class="field">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <p>Body</p>
        <%= f.text_area :body %>
      </div>
      <div class="field">
        <%= f.submit "Update Book" %>
      </div>
   <% end %>
   <%= link_to "Show", book_path(@book.id) %>
   |
   <%= link_to "Back", books_path %>
</div>